extends layout

block content
  h1= Title

  p #[strong Book: ] #{book.title}

  if book_instances.length > 0

    p #[strong Delete the following books instances before attempting to delete this book.]

    div(style={'margin-left':'20px','margin-top':'20px'})

      h4 Books Instances

      ul
      each bookinstance in book_instances
        li 
          a(href=bookinstance.url) #{bookinstance.id}

  else 
    p Do you really want to delete this book?

    form(method='POST' action='')
      div.form-group
        input#authorid.form-control(type='hidden', name='bookid', required='true', value=book._id)

      button.btn.btn-primary(type='submit') Delete